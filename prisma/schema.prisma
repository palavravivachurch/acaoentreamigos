generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  nome         String
  email        String   @unique
  senha        String
  criadoEm     DateTime @default(now())
  atualizadoEm DateTime @updatedAt
}

model Participante {
  id          String   @id @default(cuid())
  nome        String
  telefone    String
  email       String? // opcional
  aceitouLGPD Boolean
  numero      Int?     @unique
  criadoEm    DateTime @default(now())

  pagamento   Pagamento? @relation(fields: [pagamentoId], references: [id])
  pagamentoId String?    @unique
}

model Pagamento {
  id             String @id @default(cuid())
  participanteId String @unique

  valor        Float
  status       PagamentoStatus @default(PENDENTE)
  metodo       String
  qrCodePix    String?
  txid         String?
  confirmadoEm DateTime?
  Participante Participante?
}

model Numero {
  id       String @id @default(cuid())
  contador Int    @default(0)
  limite   Int    @default(0)
}

enum PagamentoStatus {
  PENDENTE
  CONFIRMADO
  CANCELADO
}

model Sorteio {
  id             String        @id @default(cuid())
  titulo         String
  descricao      String?
  dataSorteio    DateTime
  status         SorteioStatus @default(AGUARDANDO)
  numeroVencedor Int?
}

enum SorteioStatus {
  AGUARDANDO
  REALIZADO
  CANCELADO
}
